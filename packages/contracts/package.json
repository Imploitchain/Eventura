{
  "name": "@base-ticketing/contracts",
  "version": "0.1.0",
  "description": "Smart contracts for event ticketing platform on Base",
  "private": true,
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:all": "hardhat run scripts/deploy-all.ts",
    "deploy:factory": "hardhat run scripts/deploy-factory.ts",
    "deploy:ticketing": "hardhat run scripts/deploy-ticketing.ts",
    "deploy:marketplace": "hardhat run scripts/deploy-marketplace.ts",
    "deploy:verify": "hardhat run scripts/deploy-all.ts --verify",
    "verify": "hardhat verify --network",
    "verify:all": "hardhat run scripts/verify.ts",
    "verify:contract": "hardhat run scripts/verify.ts --",
    "typechain": "hardhat typechain",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "prepack": "npm run build",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network base-mainnet"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.25",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.0.0"
  }
}
